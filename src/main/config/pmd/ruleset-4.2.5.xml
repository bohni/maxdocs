	<!-- Logger-Rules -->
	<rule class="net.sourceforge.pmd.rules.XPathRule" message="Logger should be defined private static and have the correct class" name="KreditwerkProperLogger">
		<description>
 			Logger should normally be defined private static and have the correct class.
  		</description>
        <example>
        	<![CDATA[
 public class Foo {
	// right
	private static Log log = LogFactory.getLog(Foo.class);
	// wrong
	protected Log log = LogFactory.getLog(Testclass.class);
}
 			]]>
 		</example>
        <priority>3</priority>
        <properties>
            <property name="xpath">
                <value>
                	<![CDATA[
 //ClassOrInterfaceBodyDeclaration[(FieldDeclaration//ClassOrInterfaceType[@Image='Logger'])
