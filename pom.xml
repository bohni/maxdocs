	<name>MaxDocs</name>
	<description>A multi format wiki</description>
	<url>http://maxdocs.org</url>
	<inceptionYear>2011</inceptionYear>
	<organization>
		<name>Team maxdocs.org</name>
		<url>http://maxdocs.org</url>
	</organization>
	<licenses>
		<license>
			<name>BSD License</name>
			<url>file:///${basedir}/LICENSE.txt</url>
			<distribution>manual</distribution>
		</license>
	</licenses>

	<developers>
		<developer>
			<id>bohni</id>
			<name>Stefan Bohn</name>
			<email>stefan@bohni.net</email>
			<url>http://bohni.net</url>
			<organization>${project.organization.name}</organization>
			<organizationUrl>${project.organization.url}</organizationUrl>
			<roles>
				<role>architect</role>
				<role>developer</role>
			</roles>
			<timezone>Europe/Berlin</timezone>
		</developer>
		<developer>
			<id>mezger</id>
			<name>Matthias Mezger</name>
			<email>matthias@mezger.net</email>
			<url>http://mezger.net</url>
			<organization>${project.organization.name}</organization>
			<organizationUrl>${project.organization.url}</organizationUrl>
			<roles>
				<role>architect</role>
				<role>developer</role>
			</roles>
			<timezone>Europe/Berlin</timezone>
		</developer>
